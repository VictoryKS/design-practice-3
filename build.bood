go_binary {
  name: "server",
  pkg: "github.com/VictoryKS/design-practice-3/cmd/server",

  // Build inputs.
  srcs: [
    "httptools/**/*.go",
    "signal/**/*.go",
    "cmd/server/*.go"
  ]
}


go_binary {
  name: "lb",

  pkg: "github.com/VictoryKS/design-practice-3/cmd/lb",
  testPkg: "github.com/VictoryKS/design-practice-3/cmd/lb",

  srcs: [
    "httptools/**/*.go",
    "signal/**/*.go",
    "cmd/lb/*.go"
  ],

  // Test inputs.
  testSrcs: ["**/*test.go"],

  vendorFirst: false,
  srcsExclude: ["vendor/**/*"]
}

go_binary {
  name: "integration-test",

  testPkg: "github.com/VictoryKS/design-practice-3/integration",
  testsResFile: "integration-test.txt",
  testsBinResFile: "integration-tests",

  srcs: [
    "httptools/**/*.go",
    "signal/**/*.go",
    "cmd/lb/*.go",
    "cmd/server/*.go"
  ],

  // Test inputs.
  testSrcs: ["**/*test.go"],
  noTestExec: true,

  vendorFirst: false,
  srcsExclude: ["vendor/**/*"]
}
